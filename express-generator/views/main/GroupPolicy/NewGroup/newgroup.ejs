    // 할당된 에이전트 OS 파싱해서 가져오기
    function get_selected_os() {

        // 할당된 에디전트 태그찾기
        let parent_tag = document.getElementById("bootstrap-duallistbox-selected-list_agentlistbox[]");
        let os_list = []
        for (let option of parent_tag.options){
            os_list.push(option.attributes['os'].value)
        }

        // 키워드 매핑 - 회의해서 어떻게 할지 정하고 설계하기

        // 중복 제거하기
        os_list = os_list.reduce(function(a,b){if(a.indexOf(b)<0)a.push(b);return a;},[])

        // 세션스토리지에 저장
        sessionStorage.setItem('os_list', os_list);
        $('#contact').load(document.URL + ' #contact', {'os_list': os_list});
    }

    // 생성 버튼 클릭시
    function group_creation() {

        // 현재 탭의 위치 가져오기
        let home_tab = document.getElementById('home-tab');
        let profile_tab = document.getElementById('profile-tab');
        let contact_tab = document.getElementById('contact-tab');

        let active_tab = '';

        if (home_tab.attributes['aria-selected'].value === 'true') {
            active_tab = 'home_tab';
        }

        else if (profile_tab.attributes['aria-selected'].value === 'true') {
            active_tab = 'profile_tab';
        }

        else {
            active_tab = 'contact_tab';
        }

        // 각 탭 별 활동 정의

        // active_tab이 home_tab일 때
        if (active_tab === 'home_tab') {

            // 기본정보 작성돼있는 지 확인하고, 데이터베이스에 업데이트
            let group_name = document.getElementById('groupName').value
            let group_desc = document.getElementById('groupDesc').value
            let group_date = document.getElementById('groupDate').value
            let group_period = document.getElementById('groupPeriod').value

            console.log(group_name, group_desc, group_date, group_period);

            // 입력값에 누락이 있다면
            if (!group_name || !group_desc || !group_date || !group_period) {
                alert("입력값에 누락이 있습니다.");
            }

            // 정상적으로 잘 입력됐다면
            else {
                axios.post(document.URL + '/update-home-tab', {
                    headers: { 'Content-type': 'application/x-www-form-urlencoded', },
                    group_name : group_name,
                    group_desc: group_desc,
                    group_date: group_date,
                    group_period: group_period
                }).then(response => {
                    location.href='/group';
                })
            }
        }

        // active_tab이 profile tab일 때
        else if (active_tab === 'profile_tab') {

            // 기본정보 & 에이전트 할당정보 작성돼있는 지 확인하고, 데이터베이스에 업데이트
            // 기본정보 작성돼있는 지 확인
            let group_name = document.getElementById('groupName').value
            let group_desc = document.getElementById('groupDesc').value
            let group_date = document.getElementById('groupDate').value
            let group_period = document.getElementById('groupPeriod').value

